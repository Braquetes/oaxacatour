<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/degradado_main"
    tools:context=".FullscreenActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="imagen-full"
        android:paddingTop="8dp"
        app:srcCompat="@drawable/oaxacatour" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"
        android:textSize="65dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Bienvenido a Oaxaca Tour"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Se turista en tu estado"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/singIn"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="Iniciar SesiÃ³n"
        android:textAlignment="center"
        android:background="@drawable/btn_round_white"
        android:textColor="@color/black"
        android:onClick="singIn"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/singUp"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="Registrarse"
        android:textAlignment="center"
        android:background="@drawable/btn_round_white"
        android:textColor="@color/black"
        android:onClick="singUp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textAlignment="center" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAlignment="center" />

</LinearLayout>